    // Dynamics 365 / Power Platform specific
    "microsoft-IsvExpTools.powerplatform-vscode", // Power Platform Tools (includes pac integration)
    "mrivastava.xrm-essentials",        // Xrm Toolkit for VS Code (community)
    
